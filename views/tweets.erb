
<ol>
  <% (1..@total).each do |num| %>
    <li>
      "<%= @redis.hget("#{@user.handle}:#{num}", 'body') %>"
      <br/>
      - <%= @redis.hget("#{@user.handle}:#{num}", 'author_handle') %>
    </li>
  <% end %>
</ol>

<% if (@pagenum + 1) * 10 <  @total %>
<form action="/tweets" name="next" method="get">
  <input type="submit" value="Next">
  <input type="hidden" name="pagenum" value="{{ @pagenum + 1 }}" >
</form>
<% end %>

<% if @pagenum > 0 %>
<form action="/tweets" name="back" method="get">
  <input type="submit" value="Back">
  <input type="hidden" name="pagenum" value="{{ @pagenum - 1 }}" >
</form>
<% end %>
