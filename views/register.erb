<form action="/register" method="post">
  <fieldset>
    <p><label for="name" class="name">Name</label><input id="name" maxlength="100" name="name" size="25" type="text"></p>
    <p><label for="email" class="email">Email</label><input id="email" maxlength="100" name="email" size="25" type="text"></p>
    <p><label for="password" class="password">Password</label><input maxlength="25" name="password" size="25" type="password"></p>
    <p><input type="submit" value="Register"></p>
  </fieldset>
</form>
